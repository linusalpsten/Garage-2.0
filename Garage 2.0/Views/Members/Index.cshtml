@model IEnumerable<Garage_2._0.Models.Member>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Add Member", "Create", null, new { @class = "btn btn-default" })
</p>

<div class="panel panel-default">
    <div class="panel-heading"><h4>Members</h4></div>
    <div class="panel-body">
        @using (Html.BeginForm("Find", "Members"))
            {
            <form>
                <div class="input-group">
                    <input type="text" name="SearchString" class="form-control" placeholder="Search">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        }
    </div>
    <table class="table table-hover sortable">
        <thead>
            <tr>
                <th data-defaultsort="desc">
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th data-defaultsort="desc">
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @if (item.Vehicles.Count > 0)
                        {

                            @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "btn btn-default btn-sm glyphicon glyphicon-remove disabled", id = "buttons", title = "This member needs to check out all their vehicles first" })

                        }
                        else
                        {
                            @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "btn btn-default btn-sm glyphicon glyphicon-remove", id = "buttons", title = "Delete" })
                        }
                        @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "btn btn-default btn-sm glyphicon glyphicon-info-sign", id = "buttons", title = "Details" })
                        @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "btn btn-default btn-sm glyphicon glyphicon-edit", id = "buttons", title = "Edit" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="panel-footer"></div>
</div>
<div>
    @Html.ActionLink("Back to Garage", "Index", "Vehicles", null, new { @class = "btn btn-default" })
</div>